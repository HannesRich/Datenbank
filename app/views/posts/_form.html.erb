<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do | message | %>
        <%= message%>
    <% end %>
<% end %>

<%= form_for @post, html:{class: "form-horizontal"} do |f| %>
    <div class="form-group"> 
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.label :title, class: "form-label"%>
                <%= f.text_field :title, class: "form-control" %>
            </div>
        </div>
    </div>
    <div>
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.label :description, class: "form-label"%>
                <%= f.text_area :description, class: "form-control" %>
            </div>
        </div>
    </div>
    <div>
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.label :marktsegment, class: "form-label" %>
            </div>
        </div>
    </div>
    <div>
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.radio_button :marktsegment, 'B2B' %> B2B
                <%= f.radio_button :marktsegment, 'B2C' %> B2C
                <%= f.radio_button :marktsegment, 'Andere' %> Andere
            </div>
        </div>
    </div>
    <div>
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.label :help, class: "form-label"%>
                <%= f.text_area :help, class: "form-control" %>
            </div>
        </div>
    </div>
    <div>
        <div class="mb-3 row">
            <div class="col-6">
                <%= f.label :keywords, class: "form-label"%>
                <%= f.text_field :keywords, class: "form-control" %>
            </div>
        </div>
    </div>
    <div>
        <%= f.submit "Jetzt Pitchen", class: "btn btn-primary" %>
    </div>

<% end %>